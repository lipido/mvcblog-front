<h1>{{i18n 'Posts'}}</h1>
<div id="posts-table">
  {{#if posts.length}}
    <table border="1">
      <thead>
      <tr>
        <th>{{i18n 'Title'}}</th>
        <th>{{i18n 'Author'}}</th>
        <th>{{i18n 'Actions'}}</th>
      </tr>
      </thead>
      <tbody>
      {{#each posts}}
        <tr key="{{id}}">
          <td><a href="#view-post?id={{id}}">{{title}}</a></td>
          <td>{{author_id}}</td>
          <td>

            {{#if_eq ../currentUser author_id}}

              <button class="remove-button" item="{{id}}">{{i18n 'remove'}}</button>
              <button class="edit-button" item="{{id}}">{{i18n 'edit'}}</button>
            {{/if_eq}}
          </td>
        </tr>
      {{/each}}
    </tbody>
    </table>
  {{/if}}
</div>
{{#if isLogged}}
  <a href='#add-post'>{{i18n 'Add post'}}</a>
{{/if}}
